# NeuroChat Memory System - Environment Configuration
# Copy this file to .env and update the values for your deployment

# =============================================================================
# Memory API Configuration
# =============================================================================

# Database Connection
DATABASE_URL=postgresql://admin:epaps0991g@192.168.1.4:5432/appdb

# Embedding Provider (huggingface | ollama | openai)
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2

# OpenAI Configuration (if using openai provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ollama Configuration (if using ollama provider)  
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Vector Database Settings
VECTOR_DIM=768
COLLECTION_NAME=chunks
RAG_SCHEMA=rag
TABLE_NAME=chunks

# Text Processing
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# Deduplication
DEDUPE_ENABLED=1
DEDUPE_THRESHOLD=0.98

# Auto-create database schema/tables
AUTO_CREATE=1

